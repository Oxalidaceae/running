{
  "name": "running",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@running/frontend",
    "dev:frontend": "npm run dev --workspace=@running/frontend",
    "dev:backend": "npm run dev --workspace=@running/backend",
    "generate-courses": "npm run generate-courses --workspace=@running/backend",
    "build": "npm run build --workspaces",
    "vercel-build": "npm run build --workspace=@running/frontend && rm -rf dist && mkdir -p dist && cp -R apps/frontend/dist/. dist/",
    "lint": "npm run lint --workspace=@running/frontend"
  },
  "devDependencies": {
    "@vercel/node": "^3.2.29",
    "typescript": "~5.9.3"
  }
}
